<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>CAMPGROUNS BITCH</h1>
            <p>LOOK AT THE CAMPGROUNDS BITCH</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new campground!</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap">
        <% campgrounds.forEach(function(campsite){ %>
            <div class="col-lg-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campsite.image %>">
                    <div class="caption">
                        <h4><%= campsite.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campsite._id %>" class="btn btn-primary">More info!</a>
                    </p>
                </div>
            </div>    
        <% }); %>
    </div>
    
</div>


<% include ../partials/footer %>